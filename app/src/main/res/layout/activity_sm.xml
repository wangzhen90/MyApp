<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wpos_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/wpost_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="top|left"
        android:hint="请输您想说的新鲜事"
        android:textColor="@color/white"
        android:maxLength="500"
        android:padding="15dp"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/wpost_imglayout"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/wpost_img"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/wpost_remimg"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:background="#f00" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#A3B6C4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <ImageView
            android:id="@+id/wpost_bq"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/face" />

        <ImageView
            android:id="@+id/wpost_getimg"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/img" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#000"
            android:text="您还可以输入 "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wpost_wordnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="#f00"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="15dp"
            android:text=" 字"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/wpost_bqview"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f00"
        android:visibility="gone" />

</LinearLayout>