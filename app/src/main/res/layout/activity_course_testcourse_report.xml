<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestCourseReportActivity" >

    <FrameLayout
        android:id="@+id/fl_mian"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <widget.canvasdemo2.CustomRect
            android:id="@+id/cus_rect"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/tv_hide_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="我当前英语水平" />


        <TextView
            android:id="@+id/tv_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:text="我当前英语水平" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:text="Level 5" />

        <View
            android:id="@+id/view_line"
            android:layout_width="600dip"
            android:layout_height="2dip"
            android:layout_gravity="center_horizontal"
            android:background="@color/bg_ty_gray" />

        <TextView
            android:id="@+id/tv_hide_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_hide"
            android:text="初级 Elementary" />
    </FrameLayout>

</RelativeLayout>